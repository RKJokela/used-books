<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".BookListFragment"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_instructions"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bookList_instructions"
        android:id="@+id/bookList_instructions"
        android:gravity="center"
        android:background="@color/navy"
        android:textColor="@color/silver"
        android:layout_marginBottom="@dimen/bookList_instructionsMarginBottom"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:id="@+id/bookList_linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bookList_rowHeight"
                android:id="@+id/bookList_row1"
                android:paddingTop="@dimen/padding_between_books"
                android:paddingBottom="@dimen/padding_between_books">

                <ImageView
                    android:layout_width="@dimen/booList_imgWidth"
                    android:layout_height="match_parent"
                    android:id="@+id/bookList_row1_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/bookList_img_marginRight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/bookList_row1_title"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/bookList_row1_image"
                    android:layout_toLeftOf="@+id/bookList_row1_favorite"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookList_row1_favorite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_important"
                    android:padding="@dimen/bookList_star_padding"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bookList_rowHeight"
                android:id="@+id/bookList_row2"
                android:paddingTop="@dimen/padding_between_books"
                android:paddingBottom="@dimen/padding_between_books">

                <ImageView
                    android:layout_width="@dimen/booList_imgWidth"
                    android:layout_height="match_parent"
                    android:id="@+id/bookList_row2_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/bookList_img_marginRight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large TextLarge TextLarge Text"
                    android:id="@+id/bookList_row2_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/bookList_row2_image"
                    android:layout_toLeftOf="@+id/bookList_row2_favorite"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookList_row2_favorite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_important"
                    android:padding="@dimen/bookList_star_padding"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bookList_rowHeight"
                android:id="@+id/bookList_row3"
                android:paddingTop="@dimen/padding_between_books"
                android:paddingBottom="@dimen/padding_between_books">

                <ImageView
                    android:layout_width="@dimen/booList_imgWidth"
                    android:layout_height="match_parent"
                    android:id="@+id/bookList_row3_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/bookList_img_marginRight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/bookList_row3_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/bookList_row3_image"
                    android:layout_toLeftOf="@+id/bookList_row3_favorite"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookList_row3_favorite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_important"
                    android:padding="@dimen/bookList_star_padding"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bookList_rowHeight"
                android:id="@+id/bookList_row4"
                android:paddingTop="@dimen/padding_between_books"
                android:paddingBottom="@dimen/padding_between_books">

                <ImageView
                    android:layout_width="@dimen/booList_imgWidth"
                    android:layout_height="match_parent"
                    android:id="@+id/bookList_row4_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/bookList_img_marginRight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/bookList_row4_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/bookList_row4_image"
                    android:layout_toLeftOf="@+id/bookList_row4_favorite"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookList_row4_favorite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_important"
                    android:padding="@dimen/bookList_star_padding"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bookList_rowHeight"
                android:id="@+id/bookList_row5"
                android:paddingTop="@dimen/padding_between_books"
                android:paddingBottom="@dimen/padding_between_books">

                <ImageView
                    android:layout_width="@dimen/booList_imgWidth"
                    android:layout_height="match_parent"
                    android:id="@+id/bookList_row5_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="@dimen/bookList_img_marginRight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large TextLarge TextLarge Text"
                    android:id="@+id/bookList_row5_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/bookList_row5_image"
                    android:layout_toLeftOf="@+id/bookList_row5_favorite"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookList_row5_favorite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_important"
                    android:padding="@dimen/bookList_star_padding"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
